<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewChile"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            card_view:cardBackgroundColor="#00aaff"
            card_view:cardCornerRadius="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/imageViewChile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
               android:src="@drawable/chile" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Chile"
                android:textSize="30sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewReinoUnido"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            card_view:cardBackgroundColor="#ff0000"
            card_view:cardCornerRadius="10dp"
            android:layout_below="@+id/cardViewChile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/ImageViewReinoUnido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/unitedkingdom" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Reino Unido"
                android:textSize="30sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewBelgica"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/cardViewReinoUnido"
            card_view:cardBackgroundColor="#00ff48"
            card_view:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/imageViewBelgica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/belgica" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Belgica"
                android:textSize="30sp" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>



</FrameLayout>